{%- capture flickity_options -%}
{
  "prevNextButtons": false,
  "pageDots": {% if section.blocks.size > 1 %}true{% else %}false{% endif %},
  "setGallerySize": {% if section.settings.show_fullscreen %}false{% else %}true{% endif %},
  "adaptiveHeight": {% if section.settings.show_fullscreen %}false{% else %}true{% endif %},
  "wrapAround": true,
  "watchCSS": true,
  "dragThreshold": 8
}
{%- endcapture -%}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="collection-list" class="Home--Hero Slideshow {% if section.settings.show_fullscreen %}Slideshow--fullscreen{% endif %}">
  {%- capture collection_items -%}
    {%- for block in section.blocks -%}
      {%- assign collection = collections[block.settings.collection] -%}
      {%- render 'collection-item', block: block, collection: collection, apply_overlay: block.settings.apply_overlay -%}
    {%- endfor -%}
  {%- endcapture -%}

  {%- if section.settings.stack_on_mobile -%}
    <div class="CollectionList CollectionList--grid {% if section.settings.add_spacing %}CollectionList--spaced{% endif %}">
      {{ collection_items }}
    </div>
  {%- else -%}
    <div class="Carousel Carousel--insideDots CollectionList {% if section.settings.add_spacing %}CollectionList--spaced{% endif %} {% if section.settings.show_fullscreen %}Carousel--fixed{% endif %}" data-flickity-config='{{ flickity_options }}'>
      {{ collection_items }}
    </div>
  {%- endif -%}
</section>

<style>
  @media screen and (max-width: 640px) {
        #section-{{ section.id }} .CollectionList .CollectionItem__Wrapper .SectionHeader__Heading--emphasize {
      font-size: 1.6rem !important;
              margin-bottom: 0;
    }
  }
  @media screen and (max-width: 640px) {
    #section-{{ section.id }}.Home--Hero {
      max-height: none;
      height: 100%;
    }
    #section-{{ section.id }} .CollectionList {
      margin: 0;
    }
    #section-{{ section.id }} .CollectionList .CollectionItem {
      height: 225px;
      padding: 0;
    }
    #section-{{ section.id }} .CollectionList .CollectionItem .SectionHeader__ButtonWrapper {
      display: none;
    }
  }

  #section-{{ section.id }} .CollectionItem .Heading,
  #section-{{ section.id }} .flickity-page-dots {
    color: {{ section.settings.text_color }};
  }

  #section-{{ section.id }} .CollectionItem__Link {
    overflow: hidden;
    font-weight: 700;
    color: {{ section.settings.button_color }};
    border: none;
    padding: 16px 30px;
    box-shadow: inset 0px 0px 0 2px #ffffff;
  }

  #section-{{ section.id }} .CollectionItem__Link::before {
    border-radius: 50px;
    background-color: {{ section.settings.text_color }};
  }

  @media (-moz-touch-enabled: 0), (hover: hover) {
    #section-{{ section.id }} .CollectionItem__Link:hover {
      color: {{ section.settings.text_color }};
    }
     #section-{{ section.id }} .CollectionItem__Link:hover::before {
      transform: scale(0, 1);
    }
  }
</style>

